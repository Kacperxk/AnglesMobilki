<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RysowanieKB2202.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry
                x:Name="angleEntry"/>
            <GraphicsView x:Name="grafika"
                      HeightRequest="200"
                      WidthRequest="300"
                          />
            
            <Button
                Margin="0,200,0,0"
                x:Name="CounterBtn"
                Text="Click me"
                Clicked="OnBtnClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
